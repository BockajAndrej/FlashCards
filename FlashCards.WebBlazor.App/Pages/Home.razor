@page "/"



<MudContainer MaxWidth="MaxWidth.Large" Class="mt-8 mb-16">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" sm="10" md="8" Class="text-center">

            <MudText Typo="Typo.h2" GutterBottom="true">
                <MudIcon Icon="@Icons.Material.Filled.FlashOn" Size="Size.Large" Class="mr-2" Color="Color.Primary"/>
                FlashCards
            </MudText>
            
            <MudText Style="color: var(--color-text-secondary); margin: 20px auto;" Typo="Typo.h6">
                Váš nástroj na rýchle a spoľahlivé opakovanie učiva. Vytvárajte, spravujte a precvičujte si vlastné sady
                otázok a odpovedí.
            </MudText>

            <MudButton Style="width: 100%;" Href="/CollectionPage" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Class="mt-4 mr-3">
                Začať Učenie
            </MudButton>
        </MudItem>
    </MudGrid>

    <MudDivider Class="my-10"/>

    <MudGrid Spacing="4">

        <MudItem xs="12">
            <MudText Typo="Typo.h4" Class="mb-4 text-center">
                Vlastnosti
            </MudText>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudCard Style="background-color: var(--card-background-Primary);" Elevation="2">
                <MudCardContent>
                    <div class="d-flex align-center justify-center mb-3">
                        <MudIcon Icon="@Icons.Material.Filled.LibraryAdd" Size="Size.Large" Color="Color.Info"/>
                    </div>
                    <MudText Typo="Typo.h6" Class="text-center">Vlastné Kolekcie</MudText>
                    <MudText Typo="Typo.body2" Class="text-center">Vytvárajte a spravujte vlastné sady kartičiek s
                        otázkami a odpoveďami.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudCard Style="background-color: var(--card-background-Primary);" Elevation="2">
                <MudCardContent>
                    <div class="d-flex align-center justify-center mb-3">
                        <MudIcon Icon="@Icons.Material.Filled.Factory" Size="Size.Large" Color="Color.Success"/>
                    </div>
                    <MudText Typo="Typo.h6" Class="text-center">Režim Precvičovania</MudText>
                    <MudText Typo="Typo.body2" Class="text-center">Interaktívne rozhranie pre efektívne precvičovanie a
                        testovanie znalostí.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudCard Style="background-color: var(--card-background-Primary);" Elevation="2">
                <MudCardContent>
                    <div class="d-flex align-center justify-center mb-3">
                        <MudIcon Icon="@Icons.Material.Filled.BarChart" Size="Size.Large" Color="Color.Warning"/>
                    </div>
                    <MudText Typo="Typo.h6" Class="text-center">Prehľadné Štatistiky</MudText>
                    <MudText Typo="Typo.body2" Class="text-center">Sledujte svoj pokrok, úspešnosť a dokončené
                        kolekcie.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudCard Style="background-color: var(--card-background-Primary);" Elevation="2">
                <MudCardContent>
                    <div class="d-flex align-center justify-center mb-3">
                        <MudIcon Icon="@Icons.Material.Filled.ManageSearch" Size="Size.Large" Color="Color.Error"/>
                    </div>
                    <MudText Typo="Typo.h6" Class="text-center">Jednoduchá Správa</MudText>
                    <MudText Typo="Typo.body2" Class="text-center">Jednoduché pridávanie, úprava, mazanie, vyhľadávanie
                        a filtrovanie kartičiek.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    <MudDivider Class="my-10"/>

    <MudGrid Spacing="4">

        <MudItem xs="12" sm="6">
            <MudList T="string" Clickable="false">
                <MudListItem T="string" Icon="@Icons.Material.Filled.ListAlt" IconColor="Color.Primary">
                    <MudText Typo="Typo.subtitle1">Zoznam kolekcií kartičiek</MudText>
                    <MudText Typo="Typo.body2">Prehľad všetkých vytvorených sád s možnosťou ich otvorenia a úpravy.
                    </MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.Description" IconColor="Color.Primary">
                    <MudText Typo="Typo.subtitle1">Detail kolekcie</MudText>
                    <MudText Typo="Typo.body2">Zobrazenie jednotlivých kartičiek a správa otázok a odpovedí.</MudText>
                </MudListItem>
            </MudList>
        </MudItem>

        <MudItem xs="12" sm="6">
            <MudList T="string" Clickable="false">
                <MudListItem T="string" Icon="@Icons.Material.Filled.Quiz" IconColor="Color.Primary">
                    <MudText Typo="Typo.subtitle1">Režim učenia (Practice)</MudText>
                    <MudText Typo="Typo.body2">Interaktívne rozhranie na precvičovanie a testovanie znalostí (kľúčová
                        funkcionalita).
                    </MudText>
                </MudListItem>
                <MudListItem Href="/StatisticPage" T="string" Icon="@Icons.Material.Filled.TrendingUp" IconColor="Color.Primary">
                    <MudText Typo="Typo.subtitle1">Štatistiky / pokrok</MudText>
                    <MudText Typo="Typo.body2">Sumarizácia úspešnosti používateľa v jednotlivých kolekciách.</MudText>
                </MudListItem>
            </MudList>
        </MudItem>
    </MudGrid>

</MudContainer>

